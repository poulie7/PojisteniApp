@model PojisteniApp.Models.Pojisteni

@{
    ViewData["Title"] = "Delete";
}


<div>
    <h4>Opravdu chcete smazat pojisteni pro @Html.DisplayFor(model => model.Type)?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    <div class="text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Smaž" class="btn btn-danger" /> 

        </form>
    </div>
    
</div>

