@model IEnumerable<PojisteniApp.Models.Pojistenec>

@{
    ViewData["Title"] = "Index";
}


<div class="text-center">
    <p>
        <a asp-action="Create" class="btn btn-primary">Vytvořit nového pojištěnce</a>
    </p>

</div>

<div class="container-fluid">
    <div class="row">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Adress)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adress)
                        </td>
                        <td>
                             <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detaily</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Upravit</a> 
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Smazat</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

   

</div>
