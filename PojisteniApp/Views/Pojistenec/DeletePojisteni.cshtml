@model PojisteniApp.Models.PojisteniDetails

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h4>Smazat pojištěnce </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pojistenec.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pojistenec.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Route.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Route.Type)
        </dd>
  
    </dl>
    <div class="text-center">
        <form asp-controller="Pojistenec" asp-action="DeletePojisteniConfirmed" asp-route-PojistenecId="@Model?.Pojistenec?.Id" asp-route-PojisteniId="@Model?.Route?.Id">
            <input type="hidden"/>
            <input type="submit" value="Smaž" class="btn btn-danger" />

        </form>
    </div>
    <p>
        <a asp-action="Index">Zpět na seznam</a>
    </p>

</div>
