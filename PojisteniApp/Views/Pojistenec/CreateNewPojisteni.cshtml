@model PojisteniApp.Models.Conn

@{
    ViewData["Title"] = "Create";
}



<h4>Zadejte pojištení, které chcete připojit k pojištěnci</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 ">
        <form asp-action="CreateNewPojisteni">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group ">
                <label asp-for="PojisteniId" class="control-label"></label>
                <select asp-for="PojisteniId" class="form-control" asp-items="ViewBag.PojisteniId"></select>
            </div>

            <div class="form-group m-4 text-center">
                <input type="submit" value="Vytvořit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zpět na seznam</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
